{
  "name": "HideChessCom",
  "description": "Hide details about your oponent while playing chess.",
  "version": "1.0",
  "manifest_version": 3,
  "action": {
    "default_popup": "hidechess.html",
    "default_icon": "icons/hidechess128.png"
  },
  "icons": {
    "16": "icons/hidechess16.png",
    "32": "icons/hidechess32.png",
    "48": "icons/hidechess48.png",
    "128": "icons/hidechess128.png"
  },
  "permissions": ["activeTab", "tabs"],
  "host_permissions": ["https://www.chess.com/*"],
  "content_scripts": [
    {
      "matches": ["https://www.chess.com/*"],
      "js": ["content.js"]
    }
  ]
}
